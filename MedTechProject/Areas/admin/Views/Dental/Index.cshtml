
@model IEnumerable<Dental>



<!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><a asp-action="create">Create</a></h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead> 
                                        <tr> 
                                           
                                            <th>Title</th>
                                            <th>SubTitle</th> 
                                            <th>Description</th>
                                            <th>Info</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Photo</th> 

                                            <th></th> 
                                            
                                        </tr> 
                                    </thead> 
                                    <tfoot> 
                                        <tr> 
                                            <th>Title</th>
                                            <th>SubTitle</th> 
                                            <th>Description</th>
                                            <th>Info</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Photo</th> 

                                            <th></th> 
                                             
                                        </tr> 
                                    </tfoot> 
                                    <tbody> 
                                        @foreach (var item in Model)
	                                     {
		                                     <tr> 
                                                 
                                                <td>@item.Title</td> 
                                                <td>@item.SubTitle</td>
                                                <td>@item.Description</td> 
                                                <td>@item.Info</td>
                                                <td>@item.Email</td>
                                                <td>@item.Phone</td>
                                                <td>
                                                    <img width="100" src="@item.PhotoURL"/>
                                                </td>  
                                                <td>
                                                    <a href="/admin/dental/detail/@item.ID" class="btn btn-warning">Detail</a>
                                                    <a href="/admin/dental/edit/@item.ID" class="btn btn-warning">Edit</a>
                                                </td> 
                                            </tr> 
	                                     }
                                        
                                  
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>